config MEDIA_DATA_TUNNEL_SUPPORT
	bool
	prompt "MHL Media Data Tunneling Support"
	default n
	---help---
	  This option controls whether or not Silicon Image MHL transmitter
	  drivers include support for Media Data Tunneling (MDT).  MDT
	  support enables HID events generated by HID devices attached to
	  an MDT capable MHL sink to be passed over the MHL connection
	  to the system.

config SII8620_MHL_TX
	tristate
	prompt "Silicon Image 8620 HDMI to MHL Tx"
	select SEC_MHL_SII8620
	default n

config SEC_MHL_SII8620
	tristate
	prompt "Silicon Image 8620 HDMI to MHL Tx"
	select SEC_MHL_SUPPORT
	select SEC_MHL_AP_HDCP
	select SEC_MHL_EDID
	default n
        ---help---
        Support for MHL(SII8620) version3 chipset driver. This is a new
        version of mhl which has the required functionality to support
        mhl 3.0 spec required. Say Y here if this support mhl_version3

config MHL_VERSION
	depends on SEC_MHL_SII8620
	hex "Number of MHL Version"
	default 0x30
	---help---
	MHL Version
	For example, those device compliant
	with MHL Specification version 3.0
	shell set this MHL_VERSION to 0x30

config SEC_MHL_SUPPORT
	bool "Enable samsung MHL"
	default n
	---help---
	Say Y here if you want to enable the samsung MHL feature in HDMI driver.

config SEC_MHL_AP_HDCP
	bool "Enable HDCP in AP side"
	default n
	---help---
	Say Y here if you want to enable HDCP in AP side.

config SEC_MHL_AP_HDCP_PART1
	bool "Enable only HDCP part1 in Ap side for DRM playback"
	default n
	---help---
	Say Y here if you want to enable DDC workaround code.

config SEC_MHL_EDID
	bool "Use EDID which read by MHL"
	default n
	---help---
	Say Y here if you want to use the edid which read by MHL driver.
